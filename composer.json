{
    "name": "ellipse/handlers-action",
    "type": "library",
    "description": "The action request handler factory component of the ellipse framework",
    "keywords": [
        "Psr-15",
        "request-handler",
        "factory",
        "controller",
        "action"
    ],
    "license": "MIT",
    "homepage": "https://github.com/ellipsephp/handlers-action",
    "support": {
        "issues": "https://github.com/ellipsephp/handlers-action/issues",
        "source": "https://github.com/ellipsephp/handlers-action"
    },
    "authors": [
        {
            "name": "Pierre Mallinjoud",
            "email": "pierre.mallinjoud@gmail.com"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=7.1",
        "psr/http-message": "^1.0",
        "http-interop/http-server-handler": "^1.0",
        "container-interop/service-provider": "^0.4.0",
        "ellipse/handlers": "^1.0",
        "ellipse/container-reflection": "^1.0"
    },
    "require-dev": {
        "peridot-php/peridot": "^1.19",
        "peridot-php/leo": "^1.6",
        "mockery/mockery": "^1.0@alpha"
    },
    "autoload": {
        "psr-4": {
            "Ellipse\\Handlers\\": "src"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        },
        "binder": [
            {
                "type": "class",
                "value": "Ellipse\\Handlers\\ActionFactoryServiceProvider"
            }
        ]
    }
}
